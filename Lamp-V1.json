{
  "states": [
    {
      "power": {
        "description": "The current power state", 
        "payloadSchema": {
          "type": "boolean"
        }
      }
    }, 
    {
      "brightness": {
        "description": "The current brightness of the lamp", 
        "payloadSchema": {
          "minimum": 0, 
          "type": "integer", 
          "maximum": 100
        }
      }
    }, 
    {
      "battery": {
        "description": "The current battery of the lamp", 
        "payloadSchema": {
          "minimum": 0, 
          "type": "integer", 
          "maximum": 100
        }
      }
    }
  ], 
  "dataGroupingInterval": "15_MINUTES", 
  "actions": [
    {
      "setPower": {
        "description": "Turn the power on/off", 
        "payloadSchema": {
          "type": "boolean"
        }
      }
    }, 
    {
      "setBrightness": {
        "description": "Configure the brightness", 
        "payloadSchema": {
          "minimum": 0, 
          "type": "integer", 
          "maximum": 100
        }
      }
    }
  ]
}